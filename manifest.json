{
    "manifest_version": 3,
    "name": "Youtube Income Calculator",
    "version": "1.0",
    "description": "Estimate YouTube earnings for any channel",
    "icons": {
        "64": "/assets/active-64.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["tabs", "scripting", "webNavigation", "storage"],
    "host_permissions": ["https://www.youtube.com/*"]
}
  